<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.senaijandira.ekonomy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CadastroGanhoActivity"
            android:label="@string/title_activity_cadastro_ganho"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.senaijandira.ekonomy.MainActivity" />
        </activity>
        <activity
            android:name=".CadastroGastActivity"
            android:label="@string/title_activity_cadastro_gast"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.senaijandira.ekonomy.MainActivity" />
        </activity>
        <activity
            android:name=".VisualizarActivity"
            android:label="@string/title_activity_visualizar"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.senaijandira.ekonomy.MainActivity" />
        </activity>
        <activity
            android:name=".VisualizarGastosActivity"
            android:label="@string/title_activity_visualizar_gastos"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.senaijandira.ekonomy.MainActivity" />
        </activity>
        <activity
            android:name=".DetalhesGanhoActivity"
            android:label="@string/title_activity_detalhes_ganho"
            android:parentActivityName=".VisualizarActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.senaijandira.ekonomy.VisualizarActivity" />
        </activity>
        <activity
            android:name=".DetalhesGastoActivity"
            android:label="@string/title_activity_detalhes_gasto"
            android:parentActivityName=".VisualizarGastosActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.senaijandira.ekonomy.VisualizarGastosActivity" />
        </activity>
    </application>

</manifest>